<!DOCTYPE html>
<html ng-app="Euler">
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css" />
    <script src="js/lib/angular.js"></script>
    <script src="js/lib/angular-resource.js"></script>
    <script src="js/app.js"></script>
  </head>
  <body>
    <div class="container-narrow">
      <div class="masthead">
        <ul class="nav nav-pills pull-right">
          <li><a href="/">Home</a></li>
        </ul>
        <h3 class="muted"><%= title %></h3>
      </div>
      <hr>
      <h3>Problems</h3>
      <div ng-controller="ProblemCtrl">

        <div class="problem-item" ng-repeat="problem in problem_list">
          <div class="title">Problem {{problem._id}}</div>
          <p>{{problem.name}}</p>
        </div>

        <h3>Add new problem</h3>
        <label for="id_number">Number:</label>
        <input id="id_number" type="text" ng-model="problem.number"></input>
        <label for="id_name">Name:</label>
        <input id="id_name" type="text" ng-model="problem.name"></input>
        <label for="id_description">Description:</label>
        <textarea id="id_description" type="text" ng-model="problem.description"></textarea>
        <label for="id_answer">Answer:</label>
        <input id="id_answer" type="text" ng-model="problem.answer"></input>
        <br>
        <button class="btn" ng-click="save()">Save new</button>
      </div>
      <hr>
      <div class="footer">
        <p>The problems on this site comes from <a href="http://projecteuler.net/">Project Euler</a>.</p>
      </div>
    </div> <!-- /container -->
  </body>
</html>